<Window x:Class="AE.AE_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AE.AE_2"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="200" MinWidth="400"
        SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.75cm" />
        </Grid.RowDefinitions>                <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="60*" />
        </Grid.ColumnDefinitions>                <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" Margin="10">
        </StackPanel>
        <DockPanel Grid.Row="1">
        </DockPanel>
        <DockPanel Grid.Row="4" Grid.ColumnSpan="2">
        </DockPanel>

        <StackPanel>
            <Button Name="btnFenster1" Content="Fenster 1" Click="btnFenster1_Click" />
            <Button Name="btnFenster2" Content="Fenster 2" Click="btnFenster2_Click" />
            <Button Name="btnFenster3" Content="Fenster 3" Click="btnFenster3_Click" />
            <Button Name="btnFenster4" Content="Fenster 4" Click="btnFenster4_Click" />
        </StackPanel>
    </Grid>
</Window>
