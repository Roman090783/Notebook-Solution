<Window x:Class="AE_3._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AE_3._2"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <StackPanel Name="stpMain">
        <!-- ListBox mit Mehrfachauswahl -->
        <ListBox Name="lbxDemo" SelectionMode="Multiple">
            <ListBoxItem>Item 1</ListBoxItem>
            <ListBoxItem>Item 2</ListBoxItem>
            <ListBoxItem>Item 3</ListBoxItem>
        </ListBox>

        <!-- Bindungen für verschiedene Eigenschaften -->
        <TextBox Text="{Binding ElementName=lbxDemo, Path=Name}" />
        <TextBox Text="{Binding ElementName=lbxDemo, Path=SelectedItem}" />
        <TextBox Text="{Binding ElementName=lbxDemo, Path=SelectedItem.Content}" />
        <TextBox Text="{Binding ElementName=lbxDemo, Path=SelectedItem.Content, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox Text="{Binding ElementName=lbxDemo, Path=SelectedItems[1].Content, FallbackValue=Bitte min. 2 Items auswählen.}" />

        <!-- Relatives Binding -->
        <TextBox Text="{Binding RelativeSource={RelativeSource Self}, Path=Width}" />
        <TextBox Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Title}" />

        <!-- Inneres StackPanel -->
        <StackPanel Name="stpSub">
            <TextBox Text="{Binding RelativeSource={RelativeSource AncestorType=StackPanel}, Path=Name}" />
            <TextBox Text="{Binding RelativeSource={RelativeSource AncestorType=StackPanel, AncestorLevel=2}, Path=Name}" />
        </StackPanel>

        <!-- StackPanel mit Buttons und Bindungen -->
        <StackPanel Name="stpChange">
            <TextBox Text="{Binding Path=Wert}" />
            <Button Name="btnWertInc" Content="Wert++" Click="btnWertInc_Click" />
            <TextBox Text="{Binding Path=Zahl}" />
            <Button Name="btnZahlInc" Content="Zahl++" Click="btnZahlInc_Click" />
        </StackPanel>
    </StackPanel>
</Window>
